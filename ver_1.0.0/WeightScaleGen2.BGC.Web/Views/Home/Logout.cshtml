<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <title>Sign in</title>

    <!-- Other -->
    <link rel="stylesheet" type="text/css" href="~/footer/css_logout.css">

    <!-- Bootstrap core javascript-->
    <script src="~/demo2/vendor/jquery/jquery.min.js"></script>
    <script src="~/demo2/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/demo2/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/demo2/js/sb-admin-2.min.js"></script>
    <script src="~/demo2/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/demo2/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/demo2/js/demo/datatables-demo.js"></script>

</head>
<body class="bg-gradient-primary">

    <div class="container-fluid" style="height: calc(100vh - 200px) !important">

        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="card w-50 o-hidden border-0 shadow-lg my-5">
                <div class="card-body pb-4">
                    <div class="container">
                        <div class="d-flex flex-column text-center justify-content-center align-items-center pt-5">
                            <img src="~/logos/bgc_logo_tran.png" class="w-25" />
                            <img src="~/img/factory/factory.gif" class="img-responsive w-50 center-block d-block mx-auto">
                        </div>
                    </div>
                    <div class="row pb-5">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-6">
                            <div>
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                </div>
                                <form class="user">
                                    <a class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm w-100"
                                       asp-area="MicrosoftIdentity"
                                       asp-controller="Account"
                                       asp-action="SignIn">
                                        <i class="fa-solid fa-right-to-bracket"></i>&nbsp; Sign in
                                    </a>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-3"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core javascript-->
    <script src="~/demo2/vendor/jquery/jquery.min.js"></script>
    <script src="~/demo2/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/demo2/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/demo2/js/sb-admin-2.min.js"></script>
    <script src="~/demo2/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/demo2/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/demo2/js/demo/datatables-demo.js"></script>

    <script>
        $(".nav-item").hide();
        $('#sidebarToggle').hide();
        $(".sidebar-divider").hide();
        $('.navbar').hide();
    </script>

</body>

</html>