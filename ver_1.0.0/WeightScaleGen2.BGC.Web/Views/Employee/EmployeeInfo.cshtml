@using WeightScaleGen2.BGC.Web.Common;
@model WeightScaleGen2.BGC.Models.ViewModels.Employee.ResultGetEmpInfoViewModel
@{
    ViewData["PageTitle"] = @ViewBag.MenuName;
}
@Html.AntiForgeryToken()
<div class="h-100">
    @* Header Section *@
    <div class="pageMenuTitle">
        @if (Model.mode == Constants.Mode.Created)
        {
            <h3 class="text-black">เพิ่มพนักงาน</h3>
        }
        else
        {
            <h3 class="text-black">แก้ไขข้อมูลพนักงาน<br />: @Model.name</h3>
        }
    </div>

    <div id="dataContainerHeight" class="dataContainer">

        <div class="flex flex-row items-center justify-start mb-3">
            <div>
                <button type="button" onclick="GoToIndex();" class="buttonAction primary-bg inline-flex items-center mr-3">
                    <lord-icon src="https://cdn.lordicon.com/jzzzcrxv.json" trigger="hover" stroke="bold" colors="primary:#ffffff,secondary:#ffffff" style="width:20px;height:20px" class="mr-2"></lord-icon>
                    กลับ
                </button>
            </div>
            @if (Model.mode == Constants.Mode.Created)
            {
                <h4 class="dataTitle">เพิ่มพนักงาน</h4>
            }
            else
            {
                <h4 class="dataTitle">แก้ไขข้อมูลพนักงาน<br />: @Model.name</h4>
            }
        </div>

        <form id="formMainEmp" class="needs-validation" novalidate>
            @Html.HiddenFor(x => x.mode, new { @id = "mode" })
            <div class="space-y-4">

                <div class="">
                    @if (Model.mode == Constants.Mode.Created)
                    {
                        <label for="emp_code" class="d-block mb-2">Employee Code</label>
                        @Html.TextBoxFor(x => x.emp_code, new { @class = "border text-gray-900 block w-full p-2.5", @id = "emp_code", @maxlength = "8", @required = true })
                    }
                    else
                    {
                        <label for="emp_code" class="d-block mb-2">Employee Code</label>
                        @Html.TextBoxFor(x => x.emp_code, new { @class = "border text-gray-900 block w-full p-2.5", @id = "emp_code", @maxlength = "8", @required = true, @readonly = true })
                    }
                </div>

                <div class="">
                    <label for="name" class="d-block mb-2">Full Name (Thai)</label>
                    @Html.TextBoxFor(x => x.name, new { @class = "border text-gray-900 block w-full p-2.5", @id = "name", @maxlength = "255", @required = true })
                </div>

                <div class="">
                    @if (Model.mode == Constants.Mode.Created)
                    {
                        <label for="plant_code" class="d-block mb-2">Plant</label>
                        @Html.DropDownListFor(x => x.plant_code, SelectListMethods.GetPlantCode(), Constants.SelectOption.SelectOne,
                        new
                        {
                            @class = "border text-gray-900 block w-full p-2.5 select2",
                            @id = "plant_code",
                            @required = true
                        })
                                        }
                    else
                    {
                        <label for="plant_code" class="d-block mb-2">Plant</label>
                        @Html.DropDownListFor(x => x.plant_code, SelectListMethods.GetPlantCode(Model.plant_code), Constants.SelectOption.SelectOne,
                        new
                        {
                            @class = "border text-gray-900 block w-full p-2.5 select2",
                            @id = "plant_code",
                            @required = true
                        })
                                        }
                </div>

                <div class="">
                    @if (Model.mode == Constants.Mode.Created)
                    {
                        <label for="dept_code" class="d-block mb-2">Department</label>
                        @Html.DropDownListFor(x => x.dept_code, SelectListMethods.GetInfoDeptCode(), Constants.SelectOption.SelectOne,
                        new
                        {
                            @class = "border text-gray-900 block w-full p-2.5 select2",
                            @id = "dept_code",
                            @required = true
                        })
                                        }
                    else
                    {
                        <label for="dept_code" class="d-block mb-2">Department</label>
                        @Html.DropDownListFor(x => x.dept_code, SelectListMethods.GetInfoDeptCode(Model.dept_code), Constants.SelectOption.SelectOne,
                        new
                        {
                            @class = "border text-gray-900 block w-full p-2.5 select2",
                            @id = "dept_code",
                            @required = true
                        })
                                        }
                </div>

                <div class="">
                    @if (Model.mode == Constants.Mode.Created)
                    {
                        <label for="pay_type" class="d-block mb-2">Payment Type</label>
                        @Html.DropDownListFor(x => x.pay_type, SelectListMethods.GetPayType(), Constants.SelectOption.SelectOne,
                        new
                        {
                            @class = "border text-gray-900 block w-full p-2.5",
                            @id = "pay_type"
                        })
                                        }
                    else
                    {
                        <label for="pay_type" class="d-block mb-2">Payment Type</label>
                        @Html.DropDownListFor(x => x.pay_type, SelectListMethods.GetPayType(Model.pay_type), Constants.SelectOption.SelectOne,
                        new
                        {
                            @class = "border text-gray-900 block w-full p-2.5",
                            @id = "pay_type"
                        })
                                        }
                </div>
                <div class="">
                    <label for="work_start_date" class="d-block mb-2">Work Start Date</label>
                    @Html.TextBoxFor(x => x.work_start_date, "{0:yyyy-MM-dd}", new { @type = "date", @class = "border text-gray-900 block w-full p-2.5", @id = "work_start_date" })
                </div>
                <div class="">
                    <label for="addr_line1" class="d-block mb-2">Address</label>
                    @Html.TextBoxFor(x => x.addr_line1, new { @class = "border text-gray-900 block w-full p-2.5", @id = "addr_line1", @maxlength = "255" })
                </div>
                <div class="">
                    <label for="addr_line2" class="d-block mb-2">District, Area / Province</label>
                    @Html.TextBoxFor(x => x.addr_line2, new { @class = "border text-gray-900 block w-full p-2.5", @id = "addr_line2", @maxlength = "255" })
                </div>
                <div class="">
                    <label for="phone" class="d-block mb-2">Tel.</label>
                    @Html.TextBoxFor(x => x.phone, new { @class = "border text-gray-900 block w-full p-2.5", @id = "phone", @maxlength = "255" })
                </div>
                <div class="">
                    <label for="email" class="d-block mb-2">Email</label>
                    @Html.TextBoxFor(x => x.email, new { @class = "border text-gray-900 block w-full p-2.5", @id = "email", @maxlength = "255" })
                </div>
            </div>

            <div class="flex justify-content-center mt-12 mb-6">
                @if (Model.mode == Constants.Mode.Created)
                {
                    <button type="button" id="btnRealSave" onclick="Save();" class="buttonAction w-150px primary-bg inline-flex justify-content-center items-center">เพิ่ม</button>
                }
                else
                {
                    <button type="button" id="btnRealSave" onclick="Save();" class="buttonAction w-150px primary-bg inline-flex justify-content-center items-center">บันทึก</button>
                }
            </div>

        </form>
    </div>
</div>

@section Scripts{
    <script>

        $(function () {
            BindControl();
        });

        function BindControl() {

        }

        function GoToIndex() {
            window.location.href = '@Url.Action("Index", "Employee")';
        }

        function Save() {
            var validFormMain = ValidateFormMain();
            if (validFormMain) {
                RealSaveInfo();
            }
        }

        function ValidateFormMain() {
            if (!$('#formMainEmp')[0].checkValidity()) {
                Swal.fire({
                    title: 'คำเตือน',
                    text: 'กรุณากรอกข้อมูลให้ครบถ้วน !',
                    icon: 'error',
                    showCancelButton: false,
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'ตกลง',
                    confirmButtonClass: 'd-sm-inline-block btn btn-sm btn-outline-primary shadow-sm',
                    buttonsStyling: false,
                })
                return false;
            } else {
                return true;
            }
        }

        function RealSaveInfo() {
            var formData = $('#formMainEmp').serialize();
            Swal.fire({
                title: 'ยืนยันการบันทึกข้อมูล ?',
                text: '',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'ยืนยัน',
                cancelButtonText: 'ยกเลิก',
                confirmButtonClass: 'd-sm-inline-block btn btn-sm btn-outline-primary shadow-sm',
                cancelButtonClass: 'd-sm-inline-block btn btn-sm btn-outline-danger shadow-sm',
                buttonsStyling: false,
            }).then(function (result) {
                if (result.value) {
                    $.ajax({
                        cache: false,
                        async: true,
                        type: "POST",
                        url: '@Url.Action("SaveEmployeeInfo", "Employee")',
                        data: formData,
                        success: function (data) {
                            if (data.status == '@Constants.Result.Success') {
                                var timerInterval
                                Swal.fire({
                                    title: 'บันทึกสำเร็จ !',
                                    html: 'I will close in <strong></strong> seconds.',
                                    timer: 750,
                                    icon: "success",
                                    showCancelButton: false, // There won't be any cancel button
                                    showConfirmButton: false, // There won't be any confirm button
                                    buttonsStyling: false,
                                    onBeforeOpen: function () {
                                        Swal.showLoading()
                                        timerInterval = setInterval(function () {
                                            Swal.getContent().querySelector('strong')
                                                .textContent = Swal.getTimerLeft()
                                        }, 100)
                                    },
                                    onClose: function () {
                                        clearInterval(timerInterval)
                                    }
                                }).then(function (result) {
                                    if (
                                        // Read more about handling dismissals
                                        result.dismiss === Swal.DismissReason.timer
                                    ) {
                                        console.log('หน้าต่างจะปิดในเวลา')
                                        GoToIndex();
                                    }
                                })
                            } else if (data.status == '@Constants.Result.Invalid') {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'คำเตือน',
                                    text: data.message,
                                    showCancelButton: false,
                                    confirmButtonColor: '#3085d6',
                                    confirmButtonText: 'ตกลง',
                                    confirmButtonClass: 'd-sm-inline-block btn btn-sm btn-outline-primary shadow-sm',
                                    buttonsStyling: false,
                                })
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'คำเตือน',
                                    text: data.message,
                                    showCancelButton: false,
                                    confirmButtonColor: '#3085d6',
                                    confirmButtonText: 'ตกลง',
                                    confirmButtonClass: 'd-sm-inline-block btn btn-sm btn-outline-primary shadow-sm',
                                    buttonsStyling: false,
                                })
                                toastr['error']('Fail - ' + data.message, 'Warning!', ErrOpt);
                            }
                        },
                        error: function (err) {
                            toastr['error']('Fail', 'Warning!', ErrOpt);
                        },
                        complete: function (data) {
                        }
                    });
                }
            })
        }

    </script>
}